[time_label]
full_text=
color=#FFFFFF

[time]
command=date '+%H:%M' | sed 's/:/h/'
interval=60

[separator]

[date_label]
full_text=

[date]
command=date '+%d/%m/%y'
interval=3600

[separator]

[temperature]
label=
command=~/dotfiles/.config/i3blocks-contrib/temperature/temperature
interval=10

[separator]

[batterybar]
command=~/dotfiles/.config/i3blocks-contrib/batterybar/batterybar #run batterybar -h for options
